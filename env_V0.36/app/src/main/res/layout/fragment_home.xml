<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteGreen"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGreen"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/corbelb"/>

        <ImageButton
            android:id="@+id/addListingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="90dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_add"
            android:background="@drawable/circle"
            />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTINGS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@color/colorVeryDarkGreen"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/kyokashob"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userListingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.70"
        android:layout_marginBottom="60dp"
        android:scrollbars="vertical"
        ></androidx.recyclerview.widget.RecyclerView>



</LinearLayout>
